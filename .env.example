VITE_APP_MODE=demo
VITE_NODE_ENV=development

# API paths
VITE_API_BASE_URL=https://api.example.com
VITE_API_TIMEOUT=30000
VITE_API_BASE_PATH=
VITE_MCP_API_BASE_PATH=
TENANT_ID=

# Security
VITE_ENCRYPTION_KEY=changeme_32_chars_minimum_for_prod
VITE_JWT_SECRET=changeme_32_chars_minimum_for_prod
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION_MINUTES=15
VITE_SESSION_TIMEOUT_MINUTES=30
VITE_ENABLE_2FA=false

# CSRF
VITE_CSRF_TOKEN_HEADER=X-CSRF-Token
VITE_CSRF_COOKIE_NAME=_csrf

# Feature flags
VITE_ENABLE_VIRTUAL_CARDS=true
VITE_ENABLE_MOBILE_DEPOSIT=true
VITE_ENABLE_BILL_PAY=true
VITE_ENABLE_RECURRING_TRANSFERS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_AUTO_APPROVE_DEMO_USERS=true

# Monitoring
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=

# Email providers (choose one provider and set the related values)
VITE_SENDGRID_API_KEY=
VITE_SENDGRID_FROM_EMAIL=alerts@finbank.eu
VITE_MAILGUN_API_KEY=
VITE_MAILGUN_DOMAIN=
VITE_RESEND_API_KEY=
VITE_EMAIL_FROM=alerts@finbank.eu
VITE_EMAIL_FROM_NAME=Fin-Bank

# IP/Geolocation
VITE_IPIFY_API_KEY=
VITE_ABSTRACT_API_KEY=

# Storage for encrypted assets (e.g., mobile deposit images)
VITE_STORAGE_BUCKET=
VITE_STORAGE_ENCRYPTION_KEY=

# Banking flags
VITE_ENABLE_JOINT_ACCOUNTS=true
VITE_ENABLE_SPENDING_ANALYTICS=true
VITE_ENABLE_MOBILE_DEPOSIT=true

