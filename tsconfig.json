{
  "include": ["src/**/*.ts", "src/**/*.tsx", "config/**/*.ts", "vite.config.ts", "eslint.config.js"],
  "exclude": ["agent/**/*", "backend/**/*", "codex/**/*"],
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Essential only - disable linting */
    "skipLibCheck": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedSideEffectImports": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    
    /* Keep only critical type safety */
    "noImplicitAny": true,
    "strictNullChecks": true,
    
    "paths": {
      "@/*": ["./src/*"],
    }
  }
}
